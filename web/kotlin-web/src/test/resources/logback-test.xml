<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern><![CDATA[%d{HH:mm:ss.SSS} %-5level [%thread] [%logger:%line] - %msg%n]]></pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="INFO"/>

  <logger name="com.acadiasoft" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
